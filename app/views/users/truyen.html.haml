#user-truyen
  .row.user-content
    .col-sm-7.content-left
      .user-info
        .well
          .avatar
            .user-image
              - if @user.avatar.present?
                = image_tag(@user.avatar.image.url)
              - else
                = image_tag("/assets/avatar.png")
            .name 
              = @user.name
            .star-date 
              Tham gia từ: 
              = @start_date
          .clear-fix  
          .status
            %div
              Số truyện đã đăng: 
              %span.number 
                = @total_truyen_cuoi
            %div
              Được like:  
              %span.number 
                = @user.like_total
              lần
            %div
              Được bình luận: 
              %span.number 
                = @total_comment
              lần
            %div
              Được xem: 
              %span.number 
                = @total_view
              lần
            %div
              Thứ hạng: 
              %span.number 
                = @rank
          %h4.option
            %a{:href => user_path(@user)}
              %i.fa.fa-picture-o{"aria-hidden" => "true"}
              Ảnh đã đăng                
    .col-sm-5.content-right 
  .user-jokes 
    %h3 Truyện đã đăng 
    - @posts.limit(10).each do |truyencuoi|
      .row.main-content
        .col-sm-7.content-left
          %a.truyen-cuoi-content{:href => post_path(truyencuoi)}
            .panel.panel-default
              .panel-body  
                = sanitize truyencuoi.content
        .col-sm-5.content-right
          .sticky_column
            .truyen-cuoi-title
              %h4
                %a.title{:href => post_path(truyencuoi)} 
                  = truyencuoi.title
            .info
              .upload-at
                Đăng bởi 
                %a.name{ :href => user_path(@user) }
                  = @user.name
                %span.publish-time
                  = time_ago_in_words(anh_che.publish)
                trước 
              %p.status
                %span.view
                  %i.fa.fa-eye{"aria-hidden" => "true"}
                  = truyencuoi.view
                %span
                  %i.fa.fa-comments{"aria-hidden" => "true"}
                  10  
            .fb-like-button
              .before-click
                %i.fa.fa-thumbs-up{"aria-hidden" => "true"}
                %span.text Like
                %span.number 
                  = truyencuoi.like
              .after-click 
                %i.fa.fa-check{"aria-hidden" => "true"}
                %span.text Like
                %span.number 
                  = truyencuoi.like + 1
              .post-id{style: "display:none;"} 
                = truyencuoi.id
            .fb-share-button{"data-href" => post_url(truyencuoi), "data-layout" => "button", "data-mobile-iframe" => "true", "data-size" => "small"}
              %a.fb-xfbml-parse-ignore{:href => post_url(truyencuoi)+"&src=sdkpreparse", :target => "_blank"} Share       
      .clear-fix{style: "border-bottom: 1px solid #ddd; margin-bottom: 20px;"}
  - if @posts.size > 9    
    .infinite-scrolling
      %button.btn.btn-info{:type => "button"} xem thêm, còn nhiều lắm
      = will_paginate @posts
  - elsif @posts.size == 0   
    .notice 
      %h4 Hiện tại chưa có nội dung nào... a hi hi.      
